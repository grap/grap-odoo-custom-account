<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']/ancestor-or-self::div[hasclass('o_setting_box')]" position="after">

                <div class="col-12 col-lg-6 o_setting_box" id="sale_move_policy">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Sale Move Policy</span>
                        <div class="text-muted">
                            Choose level of account line aggregation
                        </div>
                        <div class="content-group mt16">
                            <field name="sale_move_policy" required="1"/>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
